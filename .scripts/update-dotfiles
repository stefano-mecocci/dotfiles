#!/bin/bash

dotpath="$HOME/Documents/dotfiles"

# Openbox files
cp -rf ~/.config/openbox "$dotpath"/.config

# Polybar files
cp -rf ~/.config/polybar "$dotpath"/.config

# Kitty terminal files
cp -rf ~/.config/kitty "$dotpath"/.config

# BSPWM files
cp -rf ~/.config/bspwm "$dotpath"/.config
cp -rf ~/.config/sxhkd "$dotpath"/.config

# Bash files
cp -rf ~/.bash_aliases "$dotpath"/.bash_aliases
cp -rf ~/.bashrc "$dotpath"/.bashrc

# Extras: scripts, themes, fonts, sounds
cp -rf ~/.scripts "$dotpath"
cp -rf ~/.themes "$dotpath"
cp -rf ~/.fonts "$dotpath"
cp -rf ~/.sounds "$dotpath"

# Miscellanous files
cp -rf ~/.config/.Xresources "$dotpath"/.config/.Xresources
cp -rf ~/.config/compton.conf "$dotpath"/.config/compton.conf
cp -rf ~/.config/dunst "$dotpath"/.config

cd ~/Documents/dotfiles
git add .
git commit -m "update"
git push
