#!/bin/bash

bspc monitor -d I II III

# Autostart applications
sxhkd &
feh --bg-fill $HOME/Pictures/wallpapers/abstract2.png
bash $HOME/.scripts/start-polybar
xrdb -merge ~/.config/.Xresources
dunst &
bash $HOME/.scripts/check-updates
rm -f $HOME/*.png
xinput set-prop 11 "libinput Tapping Enabled" 1

# Config
bspc config border_width 0
bspc config window_gap 18

bspc rule kitty -a desktop=^2
